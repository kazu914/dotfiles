[core]
  editor = nvim -c \"set fenc=utf-8\"
  ignorecase = false
  filemode = false
  quotepath = false
[push]
  default = current
[color]
  ui = true
[color "status"]
  added = green
  changed = red
  untracked = blue
  unmerged = yellow
[alias]
  st = status --short --branch
  df = difftool
  co = commit
  br = branch
  ps = push
  pl = pull
  ck = checkout
  sw = switch
  pul = pull
  pus = push
  tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
[diff]
        tool = difftastic
[difftool]
        prompt = false
[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
[pager]
        difftool = true
